<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
    <android.support.constraint.ConstraintLayout
            android:id="@+id/detail_content_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="10dp"

            android:focusableInTouchMode="true"
        >

        <TextView
                android:id="@+id/post_title"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toTopOf="parent"

                tools:text="Titulo"

                android:textStyle="bold"
        />

        <TextView
                android:id="@+id/post_content"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/post_title"

                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut hendrerit nisl nec vulputate vestibulum. Pellentesque luctus finibus purus. Praesent ut ante luctus, ullamcorper felis ut, bibendum justo. Praesent facilisis nunc lacinia laoreet mattis. Integer nulla nibh, cursus non vehicula at, consectetur tincidunt nunc. Vestibulum fringilla, leo ut tempus iaculis, metus ante gravida libero, sit amet condimentum velit arcu at eros. Proin nec turpis sed enim consectetur accumsan. Integer posuere enim ut dapibus consequat. Nunc nec justo arcu. Cras tristique vehicula accumsan. Phasellus aliquam efficitur magna sed consequat. Aliquam pharetra lacus nec eleifend dapibus. Aliquam auctor, libero ut fermentum lacinia, est sem facilisis dolor, id molestie velit sapien nec sem. Phasellus quis aliquam est."
        />

        <android.support.v7.widget.RecyclerView
                android:id="@+id/comments_list"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/post_content"

                android:layout_marginTop="10dp"
        />

        <TextView
                android:id="@+id/detail_error"

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="@string/error_message"

                android:gravity="center"
                android:padding="50dp"

                app:layout_constraintTop_toBottomOf="@id/post_content"

                android:layout_marginTop="10dp"

                android:visibility="gone"

        />

        <EditText
                android:id="@+id/new_comment_input"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@id/comments_list"
                android:hint="Introduce aquÃ­ tu comentario..."

                android:layout_marginTop="10dp"
        />

        <Button
                android:id="@+id/send_comment_btn"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.3"

                android:text="Enviar"

                app:layout_constraintTop_toBottomOf="@id/new_comment_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                android:layout_marginTop="10dp"
        />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
